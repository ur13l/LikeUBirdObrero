ScrollView.page
    StackLayout(orientation="vertical", height="100%")
        StackLayout.background-blue(orientation="vertical", height="30%", [style.background]="'url(\"~/assets/img/plomeria.png\")'")
            StackLayout.black-mask        
                StackLayout(orientation="horizontal", height="50%")
                    StackLayout(width="15%")      
                    Image(height="25" width="70%" src="~/assets/img/logoicon.png")
                StackLayout(orientation="horizontal", height="50%")
                    Label.medium-text.white-text(verticalAlignment="center", horizontalAlignment="center", width="100%", style="text-align: center;", text="Selecciona tu especialidad")
        
        StackLayout(height="70%")
            StackLayout.background-white.item(*ngFor="let job of jobs", [nsRouterLink]="['/certification-lub']", height="60", orientation="horizontal")
                StackLayout(width="20%", verticalAlignment="center")
                    Image([src]="job.image", stretch="aspectFill", height="30", width="30")
                StackLayout(orientation="vertical", width="50%", marginLeft="4%", verticalAlignment="center")
                    Label([text]="job.name")
                StackLayout(width="30%",  verticalAlignment="center")
                    Image(src="~/assets/img/ubird.png", stretch="aspectFill", height="30", width="30")
                StackLayout.line-purple
                
    
    