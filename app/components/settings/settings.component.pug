StackLayout.background-blue(orientation="vertical")
    Image.img-rounded(src="{{user.image}}", height="100", width="100", stretch="aspectFill")
    StackLayout(orientation="horizontal", padding="20")
        Label([text]="user.name")
    Label(marginLeft="20", marginRight="20", marginTop="10", [text]="user.phone")
    Label(marginLeft="20", marginRight="20", marginTop="10", [text]="user.address")
    StackLayout(height="30%")
        GridLayout(columns="*", rows="*")
            MapView(
                col="0", 
                row="0",
                [latitude]='latitude',
                [longitude]='longitude',
                [zoom]='zoom',
                mapAnimationsEnabled="true",
                (mapReady)="onMapReady($event)")
    StackLayout(height="20%", padding="20", orientation="horizontal")
        StackLayout(width="80%", verticalAlignment="center")
