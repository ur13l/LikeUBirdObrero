StackLayout(orientation="vertical")
    StackLayout(height="85%")
        GridLayout(columns="*", rows="*")
            MapView(
                col="0", 
                row="0",
                [latitude]='latitude',
                [longitude]='longitude',
                [zoom]='zoom',
                mapAnimationsEnabled="true",
                (mapReady)="onMapReady($event)")

    StackLayout.background-blue(height="15%", padding="10", orientation="horizontal")
        StackLayout(width="30%", verticalAlignment="center")
            Image.img-rounded([src]="order.worker.image", stretch="aspectFill", height="60", width="60")
        StackLayout(orientation="vertical", width="40%", marginLeft="4%", verticalAlignment="center")
            Label.white-text([text]="order.worker.name")
            Label.secondary-text([text]="order.name")
        StackLayout(orientation="vertical", width="30%", marginLeft="4%", verticalAlignment="center")            
            Image(src="~/assets/img/checked-white.png", width="25", (tap)="rating()")
