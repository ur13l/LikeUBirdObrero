StackLayout.page
    StackLayout.background-blue.item(orientation="horizontal", padding="10")
        StackLayout(width="30%", verticalAlignment="center")
            Image.img-rounded([src]="order.worker.image", stretch="none", height="60", width="60")
        StackLayout(orientation="vertical", width="30%", marginLeft="4%", verticalAlignment="center")
            Label([text]="order.worker.name")
        StackLayout(orientation="vertical", width="40%", marginLeft="4%", verticalAlignment="center")            
            Label(text="¿Cómo estás?", marginRight="20")
    StackLayout.line    
    StackLayout.background-blue(horizontalAlignment="right", width="100%", padding="10", orientation="horizontal")
        Image.img-rounded(src="~/assets/img/filled-circle.png", height="20", width="20")    
        Label.white-text(text="Hoy")
    StackLayout.line
    StackLayout.background-blue(orientation="horizontal", padding="10")
        GridLayout(columns="*,*,*", rows="auto,auto,auto", padding="10")
            Label.bold(horizontalAlignment="center", col="0", row="0", text="Servicio del día")
            Label.bold(horizontalAlignment="center", col="1", row="0", text="Fecha")
            Label.bold(horizontalAlignment="center", col="2", row="0", text="Importe")
            Label(horizontalAlignment="center", col="0", row="1", [text]="order.name")
            Label(horizontalAlignment="center", col="1", row="1", [text]="order.date")
            Label(horizontalAlignment="center", col="2", row="1", [text]="'$' + order.price")
            StackLayout(orientation="horizontal", colspan="2", col="0", row="2", horizontalAlignment="center", paddingTop="20", verticalAlignment="center")
                Image.img-rounded([src]="user.image", height="30", width="30", stretch="aspectFill")
                Label.bold(marginLeft="10", horizontalAlignment="center", [text]="user.name")
            Label.secondary-text(horizontalAlignment="center", col="2", row="2", [text]="order.worker.km + 'km'", verticalAlignment="center")
    StackLayout.line    
    StackLayout.background-blue(orientation="horizontal",padding="10", width="100%", (tap)="track()", horizontalAlignment="center", verticalAlignment="center")
        Label(text="En camino", marginRight="20")
        Image(src="~/assets/img/fast-delivery.png", height="30")
    StackLayout.line
    StackLayout.background-blue(height="100%")

