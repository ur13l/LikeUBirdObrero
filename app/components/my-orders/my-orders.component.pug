doctype html
ScrollView.page
    StackLayout.worker-container
        StackLayout.background-blue.item(*ngFor="let order of orders", orientation="horizontal", (tap)="openOrder(order)")
            StackLayout(width="20%", verticalAlignment="center")
                Image.img-rounded([src]="order.worker.image", stretch="aspectFill", height="60", width="60")
            StackLayout(orientation="vertical", width="50%", marginLeft="4%", verticalAlignment="center")
                Label([text]="order.worker.name")
                Label.secondary-text([text]="order.name")
            StackLayout(width="30%")
                StackLayout.dark-background(verticalAlignment="center", horizontalAlign="left" orientation="vertical", margin="20")
                    Label(text="En {{order.time}} minutos")
                    StackLayout(orientation="horizontal")
                        Image(height="20", src="~/assets/img/delivery-truck.png")

    
    
